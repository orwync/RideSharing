<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/smallLayout"
        android:layout_width="400dp"
        android:layout_height="105dp"
        android:background="#222144">

        <ImageView
            android:id="@+id/fromImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/up_arrow_round"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/fromImg"
            android:layout_toEndOf="@id/fromImg"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/dots"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dots_foreground"/>

        <ImageView
            android:id="@+id/toImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/down_arrow_round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:textSize="10dp"
            android:id="@+id/fromDate"
            android:layout_below="@id/from"
            android:layout_marginLeft="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:textSize="10dp"
            android:id="@+id/toDate"
            android:layout_below="@id/to"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:text="Total:"
            android:textSize="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:textColor="#fff"
            android:id="@+id/price"/>

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/price"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="40dp"
            android:paddingRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="10dp"
            android:textColor="#969696"
            android:layout_alignParentRight="true"
            android:layout_marginTop="75dp"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>